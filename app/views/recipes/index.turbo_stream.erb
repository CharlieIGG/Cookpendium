<%= turbo_stream.remove("recipes_placeholder") %>
<%= turbo_stream.append("recipes_list") do %>
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
  <% end %>
<% end %>
<%= turbo_stream.update "recipes_pagination" do %>
  <% if @pagy.next.present? %>
    <%= turbo_stream.replace "recipes_pagination" do %>
      <%= turbo_frame_tag "recipes_pagination", src: recipes_url(page: @pagy.next, format: "turbo_stream"), loading: "lazy" %>
    <% end %>
  <% end %>
<% end %>
