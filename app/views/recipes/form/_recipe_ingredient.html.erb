<%= turbo_frame_tag dom_id(recipe_ingredient.object), class:"border border-secondary rounded d-block p-3 my-2" do %>
  <div class="form-group mt-n1 row">
    <div class="col">
      <%= recipe_ingredient.label :ingredient_id, class: "control-label" %>
      <%= recipe_ingredient.collection_select :ingredient_id, @ingredients, :id, :name, 
          { include_blank: true }, data: { controller: "smart-select",
                                           "smart-select-create-value": true,
                                           "smart-select-create-url-value": api_v1_ingredients_path } %>
    </div>
  </div>
  <div class="form-group row mt-2">
    <div class="col">
      <%= recipe_ingredient.label :quantity, class: "control-label" %>
      <%= recipe_ingredient.number_field :quantity, class: "form-control" %>
    </div>
    <div class="col">
      <%= recipe_ingredient.label :measurement_unit_id, RecipeIngredient.human_attribute_name(:measurement_unit_short), class: "control-label" %>
      <%= recipe_ingredient.collection_select :measurement_unit_id, MeasurementUnit.all, :id, :name, { prompt: "Select a measurement unit or create a new one" }, class: "form-control" %>
    </div>
  </div>
<% end %>
