<li class="list-group-item d-flex justify-content-between align-items-start">
  <div class="ms-2 me-auto">
    <div class="fw-bold mb-3">
      <div class="row">
        <div class="col-md-3">
          <%= recipe_step.label :step_number, class: "form-label" %>
          <%= recipe_step.number_field :step_number, class: "form-control" %>
        </div>
        <div class="col-md-9">
          <%= recipe_step.label :instruction, class: "form-label" %>
          <%= recipe_step.text_field :instruction, class: "form-control" %>
          <small class="form-text text-muted">The step summarized, e.g. 'mix the ingredients'</small>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= recipe_step.label :description, class: "form-label" %>
          <%= recipe_step.text_area :description, class: "form-control", rows: 2 %>
        </div>
      </div>
    </div>
  </div>
</li>
