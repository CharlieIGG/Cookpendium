<div id="<%= dom_id recipe %>" class="col-md-4 capybara__recipe_card">
  <%= link_to recipe, target: "_top" do %>
    <div class="card mb-3 overflow-hidden">
      <div class="row">
        <div class="p-3 px-4 col">
          <div class="p-2">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text"><%= truncate(recipe.description, length: 90) %></p>
          </div>
        </div>
        <% if recipe.image.attached? %>
          <div class="col-4">
            <%= image_tag recipe.image.variant(:thumb), class: "img-fluid" if recipe.image.attached? %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-body-secondary">
        <%= render 'recipe_extra_details', recipe: %>
      </div>
    </div>
  <% end %>
</div>
