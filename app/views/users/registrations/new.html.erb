<div class="container-fluid bg-primary vh-100 d-flex align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-lg-4 col-md-8 col-sm-10 card bg-primary-subtle d-flex align-items-center">
      <div class="card-body w-75">
        <div class="row text-center">
          <div class="mb-4 devise__title-container text-center">
            <h1 class="devise__title fs-1 mt-4"><%= t('devise.registrations.sign_up') %></h1>
          </div>
          <p><%= t('devise.registrations.sign_up_cta') %></p>
        </div>
        <%= form_for(resource, as: resource_name, data: {turbo: false}, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="field my-3">
            <%= f.label :password %><br />
            <%= f.password_field :password,autocomplete: "new-password", class: "form-control", "aria-describedby":"password-help" %>
            <% if @minimum_password_length %>
              <div id="password-help" class="form-text"><%= t('devise.registrations.min_password_length', count: @minimum_password_length) %>
              </div>
            <% end %>
          </div>
          <div class="field my-3">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation,autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="actions text-center d-flex flex-column mt-4">
            <%= f.submit t('devise.registrations.sign_up'), class: "btn btn-secondary text-light mb-3" %>
          </div>
        <% end %>
        <div class="actions text-center d-flex flex-column">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
