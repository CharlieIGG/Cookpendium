<div class="d-flex vw-100 vh-100 bg-primary align-items-start align-items-lg-center justify-content-center">
  <div class="card d-flex align-items-center bg-primary-subtle px-lg-5 py-lg-3 p-3 mt-5 mt-lg-n5 col-10 col-lg-3 mx-0">
    <div class="card-body p-lg-2 p-4 w-100">
      <div class="row text-center">
        <div class="mb-4 devise__title-container text-center">
          <h3 class="devise__title  mt-4"><%= t('devise.passwords.forgot_password_header') %></h3>
        </div>
        <p><%= t('devise.passwords.send_paranoid_instructions') %></p>
      </div>
      <%= form_for(resource, as: resource_name, data: {turbo: false}, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <div class="field mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="actions text-center d-flex flex-column mt-4">
          <%= f.submit t('devise.passwords.send_email_cta_button'), class: "btn btn-secondary text-light mb-3" %>
        </div>
      <% end %>
      <div class="actions text-center d-flex flex-column">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
